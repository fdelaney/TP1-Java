<?xml version="1.0" encoding="UTF-8"?>
	
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<BorderPane fx:id="parent" xmlns:fx="http://javafx.com/fxml"
	fx:controller="ca.csf.Travail_Pratique_1.GameController">

	<top>
		<VBox alignment="TOP_CENTER">
			<Label>Jeu des tours de Hanoi</Label>
			<HBox>
				<Button fx:id="startButton3" id="3" text="Nouvelle Partie (3 disques)"
					onAction="#startNewGame"></Button>
				<Button fx:id="startButton4" id="4" text="Nouvelle Partie (4 disques)"
					onAction="#startNewGame"></Button>
				<Button fx:id="startButton5" id="5" text="Nouvelle Partie (5 disques)"
					onAction="#startNewGame"></Button>
				<Button fx:id="startButton6" id="6" text="Nouvelle Partie (6 disques)"
					onAction="#startNewGame"></Button>
			</HBox>
		</VBox>
	</top>
	<center>
		<StackPane>
			<HBox>
				<!-- Mettre l'image de fond avec les tours -->
			</HBox>


			<HBox maxHeight="400" maxWidth="300">
				<HBox fx:id="currentRecHBox" alignement="TOP_CENTER">
				</HBox>

				<HBox>
					<VBox fx:id="tour1VBox" alignment="BOTTOM_CENTER">
					</VBox>

					<VBox fx:id="tour2VBox" alignment="BOTTOM_CENTER">
					</VBox>

					<VBox fx:id="tour3VBox" alignment="BOTTOM_CENTER">
					</VBox>
				</HBox>

				<HBox>
					<VBox>
						<Button fx:id="enl1" text="Enlever" onAction="#enleverDisk" />
						<Button fx:id="dep1" text="Deposer" onAction="#deposerDisk" />
					</VBox>

					<VBox>
						<Button fx:id="enl2" text="Enlever" onAction="#enleverDisk" />
						<Button fx:id="dep2" text="Deposer" onAction="#deposerDisk" />
					</VBox>

					<VBox>
						<Button fx:id="enl3" text="Enlever" onAction="#enleverDisk" />
						<Button fx:id="dep3" text="Deposer" onAction="#deposerDisk" />
					</VBox>
				</HBox>
			</HBox>
		</StackPane>
	</center>

	<bottom>
	</bottom>
</BorderPane>
